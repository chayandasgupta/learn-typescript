{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true, // Enable strict type checking
    "sourceMap": true, // Generate source maps for debugging
    "moduleDetection": "force", // Force module detection
    "esModuleInterop": true, // Ensure compatibility with CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "skipLibCheck": true, // Skip type checking for external libraries
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"], // include all .ts files in the src directory
  "exclude": ["node_modules"]
}
